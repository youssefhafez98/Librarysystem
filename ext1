}
}
Books AddCopies(Books *BookArray){
int ISB,i,flag=0,n;
printf("Please enter book ISBN");
scanf("%d",&ISB);
for(i=0;flag=1;i++){
    if(BookArray[i].ISBN==ISB){
        flag=1;
        printf("Book wanted is %s \n",BookArray[i].Title);
    }
}
printf("How many copies do you want added? %d");
scanf("%d",&n);
BookArray[i].copies+=3;
printf("Copies have been successfully added ");
}
