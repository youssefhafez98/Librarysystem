    printf("Please enter either 1 or 2 for which search method you want");
    scanf("%d",&choice);
}while(choice!=1&&choice!=0);
flag=1
if(choice==1){
    printf("Please enter ISBN");
    scanf("%d",&ISB);
    for(i=0;flag=1;i++){
       if(BookArray[i].ISBN==ISB){
        printf("Book searched for by ISBN is %s\nAuthor is %s\nISBN: %d",BookArray[i].Title,BookArray[i].AuthorName,BookArray[i].ISBN);
