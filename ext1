typedef struct{
    int Day;
	int Month;
	int Year;
}date;

typedef struct{
    char Title[70];
	char AuthorName[70];
	char Publisher[70];
	int ISBN;
	date Published;
	int copies;
	int copies_available;
	char Category[30];
}Books;
int isint(int x){
if(1%x==1)
    return 1;
else
    return 0;
}

int check_int(int n){
if(isint(n)== 0){
    printf("Please enter an integer");
    return 1;
}
else if(n<0){
    printf("Please enter an integer bigger than 0");
    return 1;
}
else
    return 0;
}
Books NewBook(Books *BookArray){
int i=0;
while(BookArray[i].ISBN!=0){
    i++;
}
i=i+1;
printf("Please Enter Book title " );
fgets(BookArray[i].Title,20,stdin);
printf("Please enter Author Name ");
fgets(BookArray[i].AuthorName,20,stdin);
printf("Please enter Date Published as DD/MM/YYYY ");
scanf("%d %d %d",&BookArray[i].Published.Day,&BookArray[i].Published.Month,&BookArray[i].Published.Year);
printf("Insert Book ISBN carefully please ");
scanf("%d",&BookArray[i].ISBN);
printf("Enter Copy Number ");
scanf("%d",&BookArray[i].copies);
BookArray[i].copies_available=BookArray[i].copies;
//fflush(stdin);
printf("Enter the book category");
fgets(BookArray[i].Category,30,stdin);
printf("\nBook Successfully added ");
return *BookArray;
}
