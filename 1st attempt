#include <stdio.h>
#include <stdlib.h>

typedef struct{
    int Day;
	int Month;
	int Year;
}date;

typedef struct{
    char Title[70];
	char AuthorName[70];
	char Publisher[70];
	int ISBN;
	date Published;
	int copies;
	int copies_available;
	char Category[30];
}Books;


int check_int(int n){
if(isint(n)==0){
    printf("Please enter an integer");
    return 1;
}
else if(n<0){
    printf("Please enter an integer bigger than 0");
    return 1;
}
else
    return 0;
}
Books NewBook(Books *BookArray){
int i=0;
while(BookArray[i].ISBN!=0){
    i++;
}
i=i+1;
printf("Please Enter Book title");
gets(BookArray[i].Title);
printf("Please enter Author Name");
gets(BookArray[i].AuthorName);
printf("Please enter Date Published as DD/MM/YYYY ");
//scanf("%d %d %d",BookArray[i].date.Day, BookArray[i].date.Month, BookArray[i].date.Year);
printf("Enter Copy Number");
scanf("%d",BookArray[i].copies);
printf("Enter copies available");
scanf("%d",BookArray[i].copies_available);
printf("Enter the book category");
gets(BookArray[i].Category);
printf("Book Successfully added");
return *BookArray;
}

int main()
{
    Books BookArray[100];
    NewBook(&BookArray);


    return 0;
}
